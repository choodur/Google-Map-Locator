<% if @place.errors.any? %>
var error_msg = "Error:\n\n";

<% @place.errors.full_messages.each do |msg| %>
  error_msg += " - <%= msg %>\n" ;  
<% end %>

alert(error_msg);

<% else %>


alert('Updated <%= @place.name %>');


$('#approved-list').html("<%= escape_javascript render 'approvedlist'%>");

$('#add_lat').attr('id', 'place_latitude');
$('#add_long').attr('id', 'place_longitude');
$('#approved-list').prev().html('Confirmed Places');
<% end %>
